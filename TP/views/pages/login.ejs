<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
	<script src="https://code.jquery.com/jquery-1.11.2.js"></script>
</head>
<body class="container">

	<header>
		<% include ../partials/header %>
	</header>

	<main>
			<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
				<div class="panel panel-info" >
						<div class="panel-heading">
							<div class="panel-title">Login</div>
							<div style="float:right; font-size: 80%; position: relative; top:-10px"></div>
						</div>     
						<div style="padding-top:30px" class="panel-body" >
							<% if (message.length > 0) { %>
							<div  id="login-alert" class="alert alert-danger col-sm-12"><%= message %></div>
							   <% } %>
							 <% if (reg_success.length > 0) { %>
							<div  id="login-alert" class="alert alert-success col-sm-12"><%= reg_success %></div></br>
							   <% } %>			
							<form id="loginform" class="form-horizontal" role="form" action="" method = "post">
								<div style="margin-bottom: 25px" class="input-group">
											<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
											<input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username">                                        
										</div>
								<div style="margin-bottom: 25px" class="input-group">
											<span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
											<input id="login-password" type="password" class="form-control" name="password" placeholder="password">
										</div>
									<div style="margin-top:10px" class="form-group">
										<!-- Button -->
										<div class="col-sm-12 controls">
										  <input type="submit" value="Entrar" id="btn-login" href="#" class="btn btn-success">
										</div>
									</div>
									<div class="form-group">
										<div class="col-md-12 control">
											<div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
												Ainda n√£o tem conta? 
											<a href="/signup">
												Registar
											</a>
											</div>
										</div>
									</div>    
								</form>  
							</div>                     
						</div>  
			</div>
	</main>

	<footer>
		<% include ../partials/footer %>
	</footer>
	
</body>
</html>